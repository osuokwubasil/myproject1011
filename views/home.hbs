<!DOCTYPE html>
<html>
    <head>
        <meta charset="uft-8">
        <title>BMI Calculator</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </head>
    <body>
        <h1>Contact Us</h1>
        <form action="http://localhost:3000/process-data" method="POST" class="mx-2 my-2">
            Weight(KG):
            <input type="text" name="weight" id="weight" value="0" onchange="calculateBMI()"/>
            Height(M):
            <input type="text" name="height" id="height" value="0" onchange="calculateBMI()"/>
            <input type="submit" value="Submit"/><br><br>
            <input type="hidden"  id="result" name="BMI" />
            <input type="hidden" id="results" name="diagnosis"/>
            <p>The BMI result is <span class="text-success" id="BMI"></span> and the diagnosis is <span class="text-success" id="diagnosis"></span></p>
            
        </form>
        <script>
            function calculateBMI(){
                var height = document.getElementById("height").value;
                var weight = document.getElementById("weight").value;
                var result = weight/(height*height);
                var diagnosis;
                document.getElementById("result").value = result;
                if (result <= 18.5){
                     diagnosis = "underweight";
                }
                else if(result > 18.5 && result <= 24.9){
                     diagnosis = "Normal weight";
                }
                else if(result > 24.9 && result <= 29.9){
                      diagnosis = "Overweight";
                }else{
                     diagnosis = "Obesity";
                }
                  document.getElementById("results").value = diagnosis;
                document.getElementById("diagnosis").innerHTML = diagnosis;
                document.getElementById("BMI").innerHTML = result;
            }
        </script>
    </body>
</html>